<h1>Edit My Booking</h1>
<% if flash[:errors] %>
<% flash[:errors].each do|error| %>
<p><%=  error %></p>
<% end %>
<% end %>
<%= form_for @booking,  url: update_booking_room_hotel_path do |f| %>
  <%= f.label "Check-in:" %><br>
  <%= f.text_field :check_in_date, placeholder:"YYYY/MM/DD"%><br><br>
  <%= f.label "Check-out:" %><br>
  <%= f.text_field :check_out_date, placeholder:"YYYY/MM/DD" %><br><br>
  <%= f.label "Guests:" %>
  <%= f.select :num_ppl, (1..4) %><br><br>
  <%= f.label "Rooms:" %>
  <%= f.select :num_rooms, (1..10) %><br><br>
  <%= f.submit "Edit" %>
<% end %>
